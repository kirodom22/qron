# Frontend Environment Variables (for Netlify)
# Create a .env file or set in Netlify dashboard

# Server URL - Set this to your Railway/Render backend URL
VITE_SERVER_URL=https://your-railway-app.railway.app

# =====================================

# Backend Environment Variables (for Railway/Render)
# Set these in your hosting dashboard

# Server port (usually auto-set by Railway)
PORT=3001

# Environment mode
NODE_ENV=production

# Demo mode - no bots, wait for real players
DEMO_MODE=true

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=https://qron.netlify.app,https://your-custom-domain.com

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
